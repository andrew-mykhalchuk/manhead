		//- Modal Edit Contact
		.modal.modal-contact.modal-edit-contact.fade#edit-contact-modal(tabindex='-1', role='dialog')
			.modal-dialog(role='document')
				.modal-content
					button.close(type='button', data-dismiss='modal', aria-label='Close')
					.modal-body
						i.icon-edit
							svg(xmlns='http://www.w3.org/2000/svg', width='14', height='15', viewbox='0 0 14 15')
								g(fill='#39D0AE', fill-rule='evenodd')
									path(d='M12.21 4.816l1.323-1.42c.39-.396.39-1.107 0-1.58l-.777-.79c-.39-.394-1.09-.394-1.556 0L9.878 2.368l2.333 2.448zM9.178 3.237L0 12.553V15h2.256l9.177-9.395')
						
						h2 Edit contact

						//- Form
						form.clearfix.form-green
							.form-group.col-sm-12
								label(for='edit-contact-website') Website
								select#edit-contact-website.selectpicker(title="Select Website")
									option(value="") Amazon
									option(value="") Etsy
									option(value="") Redbubble
									option(value="") Amazon
							.form-group.col-sm-12
								label(for='edit-contact-band') Band
								select#edit-contact-band.selectpicker(title="Select Band")
									option(value="") 30 Seconds to mars
									option(value="") Fall Out Boy
									option(value="") Panic at the disco
							.form-group.col-sm-6
								label(for='edit-contact-f-name') First Name
								input#edit-contact-f-name.form-control(type='text', placeholder='First Name')
							.form-group.col-sm-6
								label(for='edit-contact-l-name') Last Name
								input#edit-contact-l-name.form-control(type='text', placeholder='Last Name')
							.form-group.col-sm-12
								label(for='edit-contact-email') Email
								input#edit-contact-email.form-control(type='email', placeholder='Enter Email address')
							.form-group.col-sm-12
								label(for='edit-contact-phone') Phone
								input#edit-contact-phone.form-control(type='text', placeholder='Enter your phone number')
						button.btn.btn-md.btn-green.btn-save(type='submit') Save
						
						//- Modal confirmation screen
						.modal-confirmation
							p Contact Saved
							a.btn-close.icon-checkmark-circle(href="", data-dismiss='modal', aria-label='Close')


